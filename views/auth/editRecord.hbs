<div class="margin-top margin-left">
<h2>My Game records</h2>

<h3>Edit record</h3>
<form action="/edit-record/{{linkedGame}}/{{_id}}" method="POST"> 
 
    <label for="date">Date: </label>
    <input type="text" name="date" id="date" value="{{oneRecord.date}}">
<br>
    <label for="players">Player names: </label>
    <input type="text" name="players" id="players" value="{{oneRecord.players}}">
<br>
    <label for="winner">Winner: </label>
    <input type="text" name="winner" id="winner" value="{{oneRecord.winner}}">
<br>
    <label for="scores">Scores: </label>
    <input type="text" name="scores" id="scores" value="{{oneRecord.scores}}">
<br>
    <label for="attachedFile">Attached file: </label>
    <input type="text" name="attachedFile" id="attachedFile" value="{{oneRecord.attachedFile}}">
<br>

<button class="button is-primary" style="margin: 10px" type="submit">Edit match record</button>    
</form>

